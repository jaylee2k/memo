<Window x:Class="DesktopMemo.App.Windows.StickyNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sticky Note"
        Width="380"
        Height="620"
        MinWidth="280"
        MinHeight="320"
        ShowInTaskbar="False"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="BodyBrush" Color="#35363B" />
        <SolidColorBrush x:Key="TopBarBrush" Color="#E0BA06" />
        <SolidColorBrush x:Key="BottomBarBrush" Color="#33343A" />
        <SolidColorBrush x:Key="MutedBrush" Color="#A9AAB1" />
        <SolidColorBrush x:Key="ActionBrush" Color="#D6D7DC" />

        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#2D2D2D" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonSurface"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonSurface" Property="Background" Value="#2D2D2D20" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonSurface" Property="Background" Value="#2D2D2D30" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource ActionBrush}" />
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ToolSurface"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToolSurface" Property="Background" Value="#FFFFFF16" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ToolSurface" Property="Background" Value="#FFFFFF24" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BodyBrush}"
            BorderBrush="#4A4B50"
            BorderThickness="1"
            CornerRadius="10"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="{StaticResource TopBarBrush}"
                  MouseLeftButtonDown="TopBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="+"
                        Margin="2,4,0,4"
                        Style="{StaticResource TopButtonStyle}"
                        Click="AddButton_OnClick" />

                <Button Grid.Column="2"
                        Content="..."
                        Margin="0,4,0,4"
                        Style="{StaticResource TopButtonStyle}"
                        Click="MoreButton_OnClick" />

                <Button Grid.Column="3"
                        Content="X"
                        Margin="0,4,4,4"
                        Style="{StaticResource TopButtonStyle}"
                        Click="CloseButton_OnClick" />
            </Grid>

            <Grid Grid.Row="1" Background="{StaticResource BodyBrush}">
                <TextBox x:Name="ContentEditor"
                         Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#DFE0E4"
                         Margin="14,12,14,12"
                         Padding="0"
                         FontSize="{Binding FontSize}"
                         FontFamily="{Binding FontFamily}"
                         FontWeight="{Binding FontWeight}"
                         FontStyle="{Binding FontStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         CaretBrush="#DFE0E4" />

                <TextBlock Text="메모를 작성하세요..."
                           Foreground="{StaticResource MutedBrush}"
                           FontSize="18"
                           Margin="14,14,14,0"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ContentEditor, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Border Grid.Row="2"
                    Background="{StaticResource BottomBarBrush}"
                    BorderBrush="#46474D"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="8,0,8,0">
                    <Button Content="B"
                            FontWeight="Bold"
                            Style="{StaticResource ToolButtonStyle}"
                            ToolTip="굵게"
                            Click="ToolbarButton_OnClick" />
                    <Button Content="I"
                            FontStyle="Italic"
                            Style="{StaticResource ToolButtonStyle}"
                            ToolTip="기울임"
                            Click="ToolbarButton_OnClick" />
                    <Button Style="{StaticResource ToolButtonStyle}"
                            ToolTip="밑줄"
                            Click="ToolbarButton_OnClick">
                        <TextBlock Text="U" TextDecorations="Underline" />
                    </Button>
                    <Button
                            Style="{StaticResource ToolButtonStyle}"
                            ToolTip="취소선"
                            Click="ToolbarButton_OnClick">
                        <TextBlock Text="ab" TextDecorations="Strikethrough" />
                    </Button>
                    <Button Content="="
                            Style="{StaticResource ToolButtonStyle}"
                            ToolTip="목록"
                            Click="ToolbarButton_OnClick" />
                    <Button Content="[]"
                            Style="{StaticResource ToolButtonStyle}"
                            ToolTip="이미지"
                            Click="ToolbarButton_OnClick" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
