<Window x:Class="DesktopMemo.App.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정"
        Width="760"
        Height="900"
        MinWidth="620"
        MinHeight="680"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1F23" />
        <SolidColorBrush x:Key="PanelBrush" Color="#23252B" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F2F3F5" />
        <SolidColorBrush x:Key="TextMutedBrush" Color="#A9ADB8" />
        <SolidColorBrush x:Key="DividerBrush" Color="#4C505A" />
        <SolidColorBrush x:Key="AccentBrush" Color="#38AEE6" />
        <SolidColorBrush x:Key="ErrorBrush" Color="#D13438" />

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2A2C33" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="#4A4E58" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,6" />
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Surface"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Surface" Property="Background" Value="#FFFFFF12" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Surface" Property="Background" Value="#FFFFFF20" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,14" />
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="#0D1116" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="18,8" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Surface"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Surface" Property="Opacity" Value="0.9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Surface" Property="Opacity" Value="0.75" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SwitchStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Track"
                                    Width="80"
                                    Height="42"
                                    CornerRadius="21"
                                    Background="#3A3D45"
                                    BorderBrush="#787D89"
                                    BorderThickness="1" />
                            <Ellipse x:Name="Thumb"
                                     Width="30"
                                     Height="30"
                                     Fill="#E8E9EC"
                                     Margin="6,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource AccentBrush}" />
                                <Setter TargetName="Track" Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,6,0" />
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.5" />
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource SurfaceBrush}"
            BorderBrush="#444854"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="56" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#25272D"
                  MouseLeftButtonDown="TopBar_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="56" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="←"
                        Style="{StaticResource TopIconButtonStyle}"
                        Click="CloseButton_OnClick" />
                <TextBlock Grid.Column="1"
                           Text="설정"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="SemiBold" />
                <Button Grid.Column="2"
                        Content="×"
                        Style="{StaticResource TopIconButtonStyle}"
                        Click="CloseButton_OnClick" />
            </Grid>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20,18,20,20">
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="92" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Width="84"
                                Height="84"
                                CornerRadius="42"
                                Background="#3D434F"
                                BorderBrush="#6D7380"
                                BorderThickness="1"
                                VerticalAlignment="Top">
                            <TextBlock Text="D"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="38"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="DesktopMemo User"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="local@desktopmemo"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="14"
                                       Margin="0,2,0,0" />
                            <TextBlock Text="프로필 관리"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontSize="14"
                                       Margin="0,4,0,0" />
                        </StackPanel>
                    </Grid>

                    <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,16" />

                    <TextBlock Text="일반" Style="{StaticResource SectionTitleStyle}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="밑줄 기본값" Style="{StaticResource RowLabelStyle}" />
                            <TextBlock Text="새 메모에 기본으로 밑줄 서식을 적용합니다."
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="13" />
                        </StackPanel>
                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource SwitchStyle}"
                                  IsChecked="{Binding IsUnderline, Mode=TwoWay}" />
                    </Grid>

                    <Separator Background="{StaticResource DividerBrush}" Margin="0,6,0,16" />

                    <TextBlock Text="글꼴" Style="{StaticResource SectionTitleStyle}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="글꼴" Style="{StaticResource RowLabelStyle}" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding FontFamily, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="크기" Style="{StaticResource RowLabelStyle}" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, NotifyOnValidationError=True}" />
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="굵기" Style="{StaticResource RowLabelStyle}" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding FontWeight, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="기울임" Style="{StaticResource RowLabelStyle}" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding FontStyle, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <Separator Background="{StaticResource DividerBrush}" Margin="0,6,0,16" />

                    <TextBlock Text="색" Style="{StaticResource SectionTitleStyle}" />
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="42" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="HEX 색상" Style="{StaticResource RowLabelStyle}" />
                        <TextBox Grid.Column="1"
                                 Margin="0,0,10,0"
                                 Text="{Binding FontColorHex, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
                        <Border Grid.Column="2"
                                Width="32"
                                Height="32"
                                CornerRadius="16"
                                BorderBrush="#D0D3D9"
                                BorderThickness="1"
                                Background="{Binding FontColorHex}" />
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="지금 저장"
                                Width="170"
                                Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding SaveCommand}" />
                        <Button Content="닫기"
                                Width="120"
                                Margin="10,0,0,0"
                                Background="Transparent"
                                BorderBrush="#636978"
                                BorderThickness="1"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                FontSize="16"
                                Padding="14,8"
                                Click="CloseButton_OnClick" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
