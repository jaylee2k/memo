<Window x:Class="DesktopMemo.App.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="환경설정"
        Width="420"
        Height="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="2" Rows="6" Margin="0,0,0,12">
            <TextBlock Text="글꼴" VerticalAlignment="Center" />
            <TextBox Text="{Binding FontFamily, UpdateSourceTrigger=PropertyChanged}" Margin="8,4,0,4" />

            <TextBlock Text="크기" VerticalAlignment="Center" />
            <TextBox Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" Margin="8,4,0,4" />

            <TextBlock Text="굵기" VerticalAlignment="Center" />
            <TextBox Text="{Binding FontWeight, UpdateSourceTrigger=PropertyChanged}" Margin="8,4,0,4" />

            <TextBlock Text="기울임" VerticalAlignment="Center" />
            <TextBox Text="{Binding FontStyle, UpdateSourceTrigger=PropertyChanged}" Margin="8,4,0,4" />

            <TextBlock Text="색상(HEX)" VerticalAlignment="Center" />
            <TextBox Text="{Binding FontColorHex, UpdateSourceTrigger=PropertyChanged}" Margin="8,4,0,4" />

            <TextBlock Text="밑줄" VerticalAlignment="Center" />
            <CheckBox IsChecked="{Binding IsUnderline, Mode=TwoWay}" Margin="8,4,0,4" VerticalAlignment="Center" />
        </UniformGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="저장" Width="88" Margin="0,0,8,0" Command="{Binding SaveCommand}" />
            <Button Content="닫기" Width="88" Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
